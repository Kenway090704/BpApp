<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    >

    <ProgressBar
        android:id="@+id/loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/bga_refresh_loding"
        android:layout_centerInParent="true"
        />

    <com.bemetoy.bp.uikit.widget.BpTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/loading_pb"
        android:text="@string/loading"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/smaller_padding"
        android:textColor="@color/grey_register"
        />

</RelativeLayout>