<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:paddingLeft="@dimen/dialog_normal_padding"
        android:paddingRight="@dimen/dialog_normal_padding"
        android:paddingBottom="@dimen/small_padding">

        <ImageView
            android:id="@+id/notice_im"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/large_padding"
            android:src="@drawable/logout_icon"
            />

        <com.bemetoy.bp.uikit.widget.BpTextView
            android:id="@+id/notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice_im"
            android:layout_marginTop="@dimen/large_padding"
            android:layout_centerHorizontal="true"
            android:text="@string/personal_logout_notice"
            android:textColor="@color/golden"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/max_padding"
            android:layout_below="@+id/notice_tv"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <com.bemetoy.bp.uikit.widget.BpButton
                android:id="@+id/agree_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/common_queding_blue_drawable"
               />

            <com.bemetoy.bp.uikit.widget.BpButton
                android:id="@+id/disagree_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/common_cancel_yellow_drawable" />

        </LinearLayout>
    </RelativeLayout>

</layout>

