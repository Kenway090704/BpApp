<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PersonalCenter.Tips" parent="DefaultTextViewStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="PersonalCenter.Digest" parent="DefaultTextViewStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PersonalCenter.TableRow.Blue" parent="DefaultTextViewStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/min_padding</item>
        <item name="android:paddingTop">@dimen/min_padding</item>
        <item name="android:layout_marginTop">@dimen/min_padding</item>
        <item name="android:layout_height">@dimen/normal_row_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="PersonalCenter.TableRow.Transparent" parent="DefaultTextViewStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/min_padding</item>
        <item name="android:paddingTop">@dimen/min_padding</item>
        <item name="android:layout_marginTop">@dimen/min_padding</item>
        <item name="android:layout_height">@dimen/normal_row_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="PersonalCenterPopTextStyle" parent="PrismaticBgStyle.White">
        <item name="android:singleLine">true</item>
    </style>

    <style name="PersonalCenterEditTextStyle" parent="PrismaticBgStyle.White">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <style name="PersonalCenter.EditText.EditAddress" parent="PrismaticBgStyle.White">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="PersonalCenter.Row.EditAddress" parent="PrismaticBgStyle.White">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large_row_height</item>
        <item name="android:paddingTop">@dimen/min_padding</item>
        <item name="android:paddingBottom">@dimen/min_padding</item>
        <item name="android:layout_marginTop">@dimen/min_padding</item>
        <item name="android:background">@drawable/personal_address_info_bg</item>
    </style>


    <style name="PrismaticBgStyle">
        <item name="android:background">@drawable/prismatic_white</item>
    </style>

    <style name="PrismaticBgStyle.White">
        <item name="android:background">@drawable/prismatic_white</item>
    </style>
</resources>